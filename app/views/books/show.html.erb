<% if flash[:notice] %>
    <p><%= flash[:notice] %></p>
  <% end %>
<script src="https://kit.fontawesome.com/81997dc11c.js" crossorigin="anonymous"></script>
<div class="container px-5 px-ms-0">
  <div class="row">
    <%= render 'users/users_info', user: @user %>
    <%= render 'books/create_book', book: @newbook %>
    
    <div class="col-md-8 offset-md-1">
  		<h2>Book detail</h2>
  		<table class="table">
  		  <tbody>
  		      <tr>
                <td><%= attachment_image_tag @user, :profile_image, :fill, 30, 30, fallback: "no_image.jpg"%></td>
                <td><%= link_to @user.name, user_path(@user) %></td>
                <td><%= @book.title %></td>
                <td><%= @book.body%></td>
              <% if @book.user_id == current_user.id %>
                <td><%= link_to "Edit", edit_book_path(@book), class:"btn btn-success"%></td>
                <td><%= link_to "Destroy", book_path(@book), method: :delete, data: {confirm: "本当に消しますか？"}, class:"btn btn-danger" %></td>
              <% end %>
          
              </tr>
          </tbody>
      </table>
    </div>